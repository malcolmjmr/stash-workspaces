{
    "name": "Side Panel Organizer",
    "version": "0.0.0.1",
    "description": "Organize your windows, tabs and bookmarks from the sidepanl.",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "omnibox": {
        "keyword": "."
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sidepanel/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "http://localhost:3000/*",
            "https://stash.technology/*"
        ]
    },
    "action": {
        "default_title": "Open Sidepanel",
        "default_icon": {
            "32": "logo.png"
        }
    },
    "icons": {
        "48": "logo.png",
        "128": "logo.png"
    },
    "permissions": [
        "tabs",
        "tabGroups",
        "bookmarks",
        "sidePanel",
        "storage",
        "unlimitedStorage"
    ],
    "incognito": "spanning",
    "commands": {},
    "manifest_version": 3
}